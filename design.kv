<ButtonCalc@Button>:
    btn_off: (0.85, 0.37, 0.26, 1)
    btn_on: (0.65, 0.24, 0.15, 1)

    font_size: "30sp"
    size_hint: (None, None)
    size: (60, 60)
    background_down: ""
    background_normal: ""
    background_color: (0, 0, 0, 0)

    canvas.before:
        Color:
            rgba: self.btn_off if self.state == "normal" else self.btn_on
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [4,]

<MyInterface>:
    canvas.before:
        Color:
            rgba: (0.15, 0.15, 0.15, 1)
            Rectangle:
                pos: self.pos
                size: self.size
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 5

        TextInput:
            id: user_input
            multiline: False
            input_filter: "float"
            text: "0"
            font_size: "26sp"
            multiline: False
            padding: [10, 16, 10, 0]
            size_hint: (0.75, None)
            halign: "right"
            height: "60dp"


        GridLayout:
            cols: 4
            spacing: 5
            size_hint_y: 0.8

            ButtonCalc:
                id: seven
                text: "7"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: eight
                text: "8"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: nine
                text: "9"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: divide
                text: "/"
                on_release: root.save_first_number(self.text)

            ButtonCalc:
                id: four
                text: "4"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: five
                text: "5"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: six
                text: "6"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: multiply
                text: "*"
                on_release: root.save_first_number(self.text)

            ButtonCalc:
                id: one
                text: "1"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: two
                text: "2"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: three
                text: "3"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: subtract
                text: "-"
                on_release: root.save_first_number(self.text)

            ButtonCalc:
                id: revers
                text: "+/-"
                font_size: "18sp"
                on_release: root.reversing_number()

            ButtonCalc:
                id: zero
                text: "0"
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: dot
                text: "."
                on_release: root.to_read(self.text)

            ButtonCalc:
                id: sum
                text: "+"
                on_release: root.save_first_number(self.text)

            ButtonCalc:
                id: clear
                text: "C"
                on_release: root.to_clear()

            ButtonCalc:
                id: equal_btn
                text: "="
                btn_off: (0, 0.7, 0.2, 1)
                btn_on: (0, 0.55, 0.25, 1)
                on_release: root.to_count()
